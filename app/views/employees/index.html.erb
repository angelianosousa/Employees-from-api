<!-- As a heading -->
<nav class="navbar navbar-light bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1 text-white">Employees</span>
  </div>
</nav><br>

<section class="section">
  <div class='container'>
    <div class='row'>
      <% @employees.each do |employee| %>
        <div class='col-sm-4'>
          <div class='card border-dark mb-3'>
            <div class='card-header text-center bg-dark text-white'>
              <h4><%= employee["name"]["title"] + " " + employee["name"]["first"] + " " + employee["name"]["last"] %></h4>
            </div>
            <div class='card-body'>
              <div class='container'>
                <div class='employee'>
                  <%= image_tag employee["picture"]["medium"], class:'img-profile' %>
                    <span>
                      <label><strong>Gender: </strong></label> <%= employee["gender"] %>
                    </span>
                    <label><strong>Email: </strong></label>
                    <%= employee["email"] %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
